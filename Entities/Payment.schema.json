{
    "name": "Payment",
    "type": "object",
    "properties": {
      "tenant_id": {
        "type": "string",
        "description": "ID of the tenant making payment"
      },
      "amount": {
        "type": "number",
        "description": "Payment amount"
      },
      "payment_date": {
        "type": "string",
        "format": "date",
        "description": "Date of payment"
      },
      "proof_image_url": {
        "type": "string",
        "description": "URL of uploaded payment proof"
      },
      "status": {
        "type": "string",
        "enum": [
          "pending",
          "verified",
          "rejected"
        ],
        "default": "pending",
        "description": "Payment verification status"
      },
      "notes": {
        "type": "string",
        "description": "Admin notes for payment"
      }
    },
    "required": [
      "tenant_id",
      "amount",
      "payment_date"
    ],
    "rls": {
      "read": {
        "$or": [
          {
            "tenant_id": "{{user.id}}"
          },
          {
            "user_condition": {
              "role": "admin"
            }
          }
        ]
      },
      "write": {
        "$or": [
          {
            "created_by": "{{user.email}}"
          },
          {
            "user_condition": {
              "role": "admin"
            }
          }
        ]
      }
    }
  }